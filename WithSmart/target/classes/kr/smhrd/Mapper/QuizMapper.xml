<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.smhrd.Mapper.QuizMapper">

   <!-- 랜덤으로 퀴즈 리스트 조회 -->
   <select id="showQuiz" resultType="kr.smhrd.entity.Quiz">
       SELECT quiz_idx, quizContent, choice1, choice2, choice3, choice4, answer
       FROM tbl_quiz
       ORDER BY RAND()
       LIMIT 10;
   </select>
    
   <!-- 퀴즈 답변 제출 -->
   <insert id="quizScore">
       INSERT INTO tbl_user_answer (quiz_idx, user_answer) VALUES (#{quiz_idx}, #{userAnswer});
   </insert>

</mapper>